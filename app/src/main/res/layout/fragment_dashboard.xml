<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:clipToPadding="false"
    android:paddingBottom="88dp"
    tools:context=".ui.fragments.DashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Profile/Settings Icon -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile Settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Animated Walo Mascot -->
        <ImageView
            android:id="@+id/walo_mascot"
            android:layout_width="193dp"
            android:layout_height="174dp"
            android:contentDescription="Walo Mascot"
            android:src="@drawable/walobluebg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Greeting Text -->
        <TextView
            android:id="@+id/greeting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Hi _____, here’s your weekly summary!"
            android:textColor="@color/bold_text_color"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/walo_mascot" />

        <!-- Budget Summary Card (Existing) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/budget_summary_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/nav_bar_blue"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/greeting_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/summary_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Budget"
                    android:textColor="@color/bold_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/dashboard_amount_display"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="€0.00"
                    android:textColor="@color/input_box_tint"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/summary_title"
                    app:layout_constraintEnd_toStartOf="@+id/btn_save_expense_dashboard"/>

                <Button
                    android:id="@+id/btn_save_expense_dashboard"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="12dp"
                    android:text="-"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/dashboard_amount_display"
                    app:layout_constraintEnd_toStartOf="@+id/btn_save_income_dashboard"
                    app:layout_constraintTop_toTopOf="@+id/dashboard_amount_display" />

                <Button
                    android:id="@+id/btn_save_income_dashboard"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="+"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/dashboard_amount_display"
                    app:layout_constraintBottom_toBottomOf="@+id/dashboard_amount_display" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Placeholder 1: Spending Breakdown -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/spending_breakdown_placeholder_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/budget_summary_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Spending Breakdown (Coming Soon)"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <View
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/placeholder_circle"/>

                <!-- TODO: Connect real data later -->
                <include layout="@layout/item_category_placeholder"/>
                <include layout="@layout/item_category_placeholder"/>
                <include layout="@layout/item_category_placeholder"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Placeholder 2: Recent Transactions -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/recent_transactions_placeholder_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/spending_breakdown_placeholder_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Transactions"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <!-- TODO: Connect real data later -->
                <include layout="@layout/item_transaction_placeholder"/>
                <include layout="@layout/item_transaction_placeholder"/>
                <include layout="@layout/item_transaction_placeholder"/>
                <include layout="@layout/item_transaction_placeholder"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="View All (Coming Soon)"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>