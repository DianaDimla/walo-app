<?xml version="1.0" encoding="utf-8"?>
<!-- The root layout for the reports screen. -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.fragments.ReportsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- The main title for the reports screen. -->
        <TextView
            android:id="@+id/reports_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reports"
            android:textColor="@color/bold_text_color"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- A BarChart for visualizing spending data. -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/reports_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- A placeholder card for the category breakdown pie chart. -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/category_breakdown_placeholder_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/bar_chart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- A circular view to represent the pie chart placeholder. -->
                <View
                    android:id="@+id/pie_chart_placeholder"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/placeholder_circle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- A TextView to indicate that the pie chart is a future feature. -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Category Breakdown Insights (Pie Chart)"
                    android:gravity="center"
                    android:textColor="@color/placeholder_text_color"
                    android:textStyle="italic"
                    app:layout_constraintTop_toTopOf="@id/pie_chart_placeholder"
                    app:layout_constraintBottom_toBottomOf="@id/pie_chart_placeholder"
                    app:layout_constraintStart_toStartOf="@id/pie_chart_placeholder"
                    app:layout_constraintEnd_toEndOf="@id/pie_chart_placeholder"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- A placeholder card for weekly trends analysis. -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/weekly_trends_placeholder_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/category_breakdown_placeholder_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- A TextView to indicate that weekly trends are a future feature. -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weekly Trends and Analysis Coming Soon (AI-driven insights)"
                android:gravity="center"
                android:padding="32dp"
                android:textColor="@color/placeholder_text_color"
                android:textStyle="italic" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>